<%= render 'shared/title', title: 'New Post'%>


  <%= form_for @post do |f| %>
  <div class=" col-md-10">
    <div class="form-group">
    <%= f.label :title %>
      <br>
      <%= f.text_field :title ,class:'form-control'%>
     </div>
    <div class="form-group">
      <%= f.label :content %>
      <br>
      <%= f.text_area :content, rows: 5,class:'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :categories %>
      <br>
      <%= collection_check_boxes(:post, :category_ids, Category.all, :id, :name) do |cbox|%>
      <%= cbox.label(class: "checkbox-inline") { cbox.check_box(class: "checkbox") + cbox.text } %>
      <% end %>
    </div>
  <br>
    <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary') %>

  <% end %>
<br/>
<%= link_to 'Back to Post List', posts_path ,class: ''%>

  </div>