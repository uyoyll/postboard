
<%= render 'shared/title',title:'Post Content' %>

<div class="col-md-8">

<div class="panel panel-primary">
 <div class="panel-heading">
 <h4> 	<%= @post.title %></h4></div>
 <div class="panel-body">
 <p><%= @post.content %></p></div>
 <div class="panel-footer"> <small>posted by </small>
 <%= " #{@post.user.name}" %></div>
</div>

      
<div class="panel panel-success">
    <div class="panel-heading">
    <h5>All Comments:</h5></div>
 <%= @post.comments.each do |comment| %>
 <div class="panel-body">
     <p>
        <%= comment.content %>
      </p>
    </div>
    <div class="panel-footer">  <small>commented by </small>
    <%= "#{comment.user.name}" %></div>    
   
</div>
  <% end %>

<% if logged_in? %>
<div class="panel panel-warning">
<div class="panel-heading">
  <h4>Leave acomment:</h4></div>
   <%= form_for [@post, @comment] do |f| %>
      <div class="row">
      <%= f.text_area :content, rows: 3, class: 'col-md-4' %>
       <div class="col-md-2">
      <%= f.submit 'Create Comment', class: 'btn btn-warning' %>
      </div>
  <% end %>
    </div>
 <% end %>


<%= link_to 'go back to all posts', posts_path %>
</div>
